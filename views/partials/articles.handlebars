{{#each articles}}{{#unless saved}}
<div class="card">
    <div class="card-header bg-primary">
        <div class="header-right">
            <button type="button" class="btn save-btn btn-success" id="save-btn" data-id="{{_id}}">Save</button>
        </div>
        <div class="header-left">
            <h3 class="articleTitle">{{title}}</h3>
        </div>
    </div>
    <div class="card-body">
        
        <div class="body-right">
            <p class="summary">{{summary}}</p>
            <a href="{{link}}" target="_blank"><button  type="button" class="btn view-btn btn-success">
                View article</button></a>
            </a>
        </div>
    </div>
</div>
<br>
{{/unless}}{{/each}}